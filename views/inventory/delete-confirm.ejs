<section class="inventory-delete">
  <h1><%= typeof title !== 'undefined' ? title : 'Delete Vehicle' %></h1>
  <%- messages() %>
  <p>Confirm Deletion - The delete is permanent.</p>

  <% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
    </ul>
  <% } %>

  <form class="auth-form" action="/inv/delete" method="post">
    <div class="form-field">
      <label for="inv_make">Make</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        readonly
        value="<%= locals.inv_make || '' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_model">Model</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        readonly
        value="<%= locals.inv_model || '' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_year">Year</label>
      <input
        type="text"
        id="inv_year"
        name="inv_year"
        readonly
        value="<%= locals.inv_year || '' %>"
      >
    </div>

    <div class="form-field">
      <label for="inv_price">Price</label>
      <input
        type="text"
        id="inv_price"
        name="inv_price"
        readonly
        value="<%= locals.inv_price || '' %>"
      >
    </div>

    <button class="btn btn-danger" type="submit">Delete Vehicle</button>

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>
</section>
