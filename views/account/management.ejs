<section class="account-management">
  <h1><%= typeof title !== 'undefined' ? title : 'Account Management' %></h1>
  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
    </ul>
  <% } %>

  <% if (locals.accountData) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>

    <p>
      <a href="/account/update/<%= locals.accountData.account_id %>" class="btn-link">Update account information</a>
    </p>

    <p>
      <a href="/wishlist/" class="btn-link">View my wishlist</a>
    </p>

    <% if (["Employee", "Admin"].includes(locals.accountData.account_type)) { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/" class="btn-link">Manage Inventory</a></p>
    <% } %>
  <% } else { %>
    <p>You're logged in.</p>
  <% } %>
</section>
